<div class="page-hd">
  <div class="wrapper">
    <div class="masthead">

      <div class="masthead-left">
        <h1 class="hdg hdg_1">
          <%= link_to "OurFamily", home_path %>
        </h1>
      </div>

      <div class="masthead-right">
        <ul class="hlist">
          <% if user_signed_in? %>
            <li><%= link_to "New Post", new_post_path %></li>
            <li><%= link_to "Gallery", gallery_path %></li>
            <li><%= link_to "Profile", edit_user_registration_path %></li>
            <li><%= button_to('Logout', destroy_user_session_path, { :method => :delete, class: 'btn btn-sm' }) %></li>
          <% else %>
            <li><%= link_to "Register", new_user_registration_path %></li>
            <li><%= link_to "Login", user_session_path %></li>
          <% end %>
        </ul>
      </div>

    </div>
  </div>
</div>
