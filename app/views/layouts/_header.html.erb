<div class="page-hd">
    <div class="grid">
      <div class="grid-col grid-col-sm_6of6 grid-col-md_3of6">
          <div class="wrapper">
              <h1 class="hdg hdg_1">
                <%= link_to "OurFamily", root_path, class: 'link' %>
              </h1>
          </div>
      </div>
      <div class="grid-col grid-col-sm_6of6 grid-col-md_3of6">
          <div class="wrapper">
              <ul class="hlist">
                <% if user_signed_in? %>
                  <li><%= link_to "New Post", new_post_path, class: 'link' %></li>
                  <li><%= link_to "Gallery", gallery_path, class: 'link' %></li>
                  <li><%= button_to('Logout', destroy_user_session_path, { :method => :delete, class: 'btnAsLink' }) %></li>
                <% else %>
                  <li><%= link_to "Login", user_session_path, class: 'link' %></li>
                <% end %>
              </ul>
          </div>
      </div>
    </div>
</div>
