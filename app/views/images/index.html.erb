<div class="grid">
  <div class="grid-col grid-col-md_6of6">
    <div class="wrapper">
      <ul class="hlist">
        <li>
          <h2 class="hdg hdg_2">Gallery</h2>
        </li>
        <li>
          <%= link_to 'Add New Image to Gallery', new_image_path, class: 'btn btn-sm' %>
        </li>
      </ul>
    </div>
  </div>

  <div class="grid-col grid-col-md_6of6" data-controller="js-gallery">
    <div class="wrapper">
      <ul class="blocks blocks_4up">
        <%= render @images %>
      </ul>
    </div>
  </div>
</div>
