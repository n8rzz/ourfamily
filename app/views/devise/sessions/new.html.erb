<div class="grid">
  <div class="grid-col grid-col-sm_6of6 mix-grid-col-md_push1of6 grid-col-md_5of6">
    <h2 class="hdg">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, :class => 'input-label' %><br />
        <%= f.email_field :email, :class => 'input input-sm', autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, :class => 'input-label' %><br />
        <%= f.password_field :password, :class => 'input input-sm', autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
