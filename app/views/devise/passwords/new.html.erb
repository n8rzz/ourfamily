<div class="grid">
  <div class="grid-col grid-col-sm_6of6 mix-grid-col-md_push1of6 grid-col-md_5of6">
    <h2 class="hdg hdg_2">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <ul class="vlist">
        <li>
          <%= f.label :email, :class => 'input-label u-isVisuallyHidden' %>
          <br />
          <%= f.email_field :email, :class => 'input input-sm', placeholder: 'Email', autofocus: true %>
        </li>
        <li>
          <%= f.submit "Send me reset password instructions", :class => 'btn' %>
        </li>
      </ul>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
