<div class="grid">
  <div class="grid-col grid-col-sm_6of6 mix-grid-col-md_push1of6 grid-col-md_5of6">
    <div class="wrapper">
      <h2 class="hdg">Resend unlock instructions</h2>

      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <ul class="vlist">
          <li>
            <%= f.label :email, :class => 'input-label' %>
            <br />
            <%= f.email_field :email, :class => 'input input-sm', autofocus: true %>
          </li>
          <li>
            <%= f.submit "Resend unlock instructions", :class => 'btn' %>
          </li>
        </ul>

      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
