<div class="grid">
  <div class="grid-col grid-col-sm_6of6 mix-grid-col-md_push1of6 grid-col-md_5of6">
    <h2 class="hdg">Create a new account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :first_name, :class => 'input-label' %><br />
        <%= f.text_field :first_name, :class => 'input input-sm', autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :last_name, :class => 'input-label' %><br />
        <%= f.text_field :last_name, :class => 'input input-sm' %>
      </div>

      <div class="field">
        <%= f.label :birthday, :class => 'input-label' %><br />
        <%= f.text_field :birthday, :class => 'input input-sm' %>
      </div>

      <div class="field">
        <%= f.label :email, :class => 'input-label' %><br />
        <%= f.email_field :email, :class => 'input input-sm' %>
      </div>

      <div class="field">
        <%= f.label :password, :class => 'input-label' %>
        <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, :class => 'input input-sm', autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, :class => 'input-label' %><br />
        <%= f.password_field :password_confirmation, :class => 'input input-sm', autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
