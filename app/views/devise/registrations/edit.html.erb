<div class="grid">
  <div class="grid-col grid-col-sm_6of6 mix-grid-col-md_push1of6 grid-col-md_5of6">
    <div class="wrapper">
      <h2 class="hdg hdg_2">Edit <%= resource_name.to_s.humanize %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <ul class="vlist">
          <li>
            <%= f.label :first_name, :class => 'input-label' %>
            <br />
            <%= f.text_field :first_name, :class => 'input input-sm', autofocus: true %>
          </li>
          <li>
            <%= f.label :last_name, :class => 'input-label' %>
            <br />
            <%= f.text_field :last_name, :class => 'input input-sm' %>
          </li>
          <li>
            <%= f.label :birthday, :class => 'input-label' %>
            <br />
            <%= f.text_field :birthday, :class => 'input input-sm' %>
          </li>
          <li>
            <%= f.label :email, :class => 'input-label' %>
            <br />
            <%= f.email_field :email, :class => 'input input-sm' %>
          </li>
          <li>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
          </li>
          <li>
            <%= f.label :password, :class => 'input-label' %> <i>(leave blank if you don't want to change it)</i>
            <br />
            <%= f.password_field :password, :class => 'input input-sm', autocomplete: "off" %>
          </li>
          <li>
            <%= f.label :password_confirmation, :class => 'input-label' %>
            <br />
            <%= f.password_field :password_confirmation, :class => 'input input-sm', autocomplete: "off" %>
          </li>
          <li>
            <%= f.label :current_password, :class => 'input-label' %> <i>(we need your current password to confirm your changes)</i>
            <br />
            <%= f.password_field :current_password, :class => 'input input-sm', autocomplete: "off" %>
          </li>
          <li>
            <%= f.submit "Update", :class => 'btn' %>
          </li>
        </ul>

      <% end %>

      <h3>Cancel my account</h3>
      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
