<div class="grid">
  <div class="grid-col grid-col-sm_6of6 mix-grid-col-md_push1of6 grid-col-md_4of6">
    <div class="wrapper">
      <h2 class="hdg hdg_2">Edit Profile</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <div class="vr_x6">
            <div class="wrapper">
                <ul class="vlist">
                  <li>
                    <%= f.label :first_name, :class => 'input-label' %>
                    <br />
                    <%= f.text_field :first_name, :class => 'input input-sm', autofocus: true %>
                  </li>
                  <li>
                    <%= f.label :last_name, :class => 'input-label' %>
                    <br />
                    <%= f.text_field :last_name, :class => 'input input-sm' %>
                  </li>
                  <li>
                    <%= f.label :birthday, :class => 'input-label' %> <span class="txt txt-sm">(mm/dd/yyyy)</span>
                    <br />
                    <%= f.text_field :birthday, :class => 'input input-sm', :maxlength => '10', :data => {:controller => 'js-fieldMask'}%>
                  </li>
                  <li>
                    <%= f.label :email, :class => 'input-label' %>
                    <br />
                    <%= f.email_field :email, :class => 'input input-sm' %>
                  </li>

                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                      <li>
                          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                      </li>
                    <% end %>

                  <li>
                    <%= f.label :current_password, :class => 'input-label' %> <i>(we need your current password to confirm your changes)</i>
                    <br />
                    <%= f.password_field :current_password, :class => 'input input-sm', autocomplete: "off" %>
                  </li>
                </ul>
            </div>

            <div class="vr_x6">
                <div class="well">
                  <div class="wrapper">
                    <h3 class="hdg hdg_3">Change Your Password</h3>
                    <ul class="vlist">
                      <li>
                        <%= f.label :password, :class => 'input-label' %> <span class="txt txt-sm">(leave blank if you don't want to change it)</span>
                        <br />
                        <%= f.password_field :password, :class => 'input input-sm', autocomplete: "off" %>
                      </li>
                      <li>
                        <%= f.label :password_confirmation, :class => 'input-label' %>
                        <br />
                        <%= f.password_field :password_confirmation, :class => 'input input-sm', autocomplete: "off" %>
                      </li>
            <!--      <li><%= f.submit "Update", :class => 'btn btn_cta' %></li>-->
                    </ul>
                  </div>
                </div>
            </div>

            <div>
                <%= f.submit "Update", :class => 'btn' %>
            </div>


      <% end %>

    </div>
  </div>
</div>
