<div class="grid">
  <div class="grid-col grid-col-sm_6of6 mix-grid-col-md_push1of6 grid-col-md_5of6">
    <div class="wrapper">
      <h2 class="hdg hdg_2">Edit Post</h2>

      <%= form_for(@post) do |f| %>
        <%= render 'shared/error_messages', object: @post %>

          <ul class="vlist">
              <li>
                  <%= f.label :title, :class => 'input-label' %>
                  <br />
                  <%= f.text_field :title, :class => 'input input-sm' %>
              </li>
              <li>
                  <%= f.label :body, :class => 'input-label' %>
                  <br />
                  <%= f.text_area :body, :class => 'input input-textarea input-sm' %>
              </li>
              <li>
                <%= f.label :photo, "Photo" %>
                <br />

                <% if @post.photo.exists? %>
                  <div>Change Attachment?</div>
                  <%= f.file_field :photo %>
                  <%= image_tag @post.photo.url(:medium) %>
                <% else %>
                  <%= f.file_field :photo %>
                <% end %>

              </li>
              <li>
                  <%= f.submit "Update Post", :class => 'btn' %>
              </li>
          </ul>
        <% end %>
    </div>
  </div>
</div>
