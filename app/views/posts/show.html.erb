<div class="grid">
    <div class="grid-col grid-col-sm_6of6">
        <div class="wrapper">
            <h2 class="hdg hdg_3"><%= @post.title %></h2>

            <div class="txt txt-sm mix-txt_italic">
                <ul class="hlist">
                    <li>
                        <%= time_ago_in_words(@post.created_at) %> ago
                    </li>
                    <li>
                        <%= @post.user.name%>
                    </li>
                </ul>
            </div>

            <div>
                <% if @post.photo.exists? %>
                    <div>
                      <%= image_tag @post.photo.url %>
                    </div>
                <% end %>

                <%= simple_format(@post.body, wrapper_tag: 'div') %>
            </div>

            <ul class="hlist">
                <li><%= link_to "New Post", new_post_path, :class => 'btn btn-sm' %></li>

                <% if correct_user?(@post.user) %>
                    <li><%= link_to "Edit Post", edit_post_path(@post.id), :class => 'btn btn-sm' %></li>
                    <li><%= button_to('Delete', @post, { :method => :delete, class: 'btn btn-sm' }) %></li>
                <% end %>

            </ul>
        </div>
    </div>
</div>
