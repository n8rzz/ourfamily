<h2 class="hdg"><%= @post.title %></h2>
<h3 class="hdg"><%= time_ago_in_words(@post.created_at) %> ago</h3>
<div>
    <%= @post.body %>
</div>

<ul class="hlist">
    <li><%= link_to "New Post", new_post_path %></li>
    <li><%= link_to "Edit Post", edit_post_path(@post.id) %></li>
</ul>

<ul class="hlist">
    <% if @previous %>
        <li><%= link_to "Previous Post", @previous %></li>
    <% end %>

    <% if @next %>
        <li><%= link_to "Next Post", @next %></li>
    <% end %>
</ul>

