<div class="grid">
  <div class="grid-col grid-col-sm_6of6">
    <h2 class="hdg"><%= @post.title %></h2>
    <h3 class="hdg"><%= time_ago_in_words(@post.created_at) %> ago</h3>
    <div><%= @post.user.email %></div>
    <div>
      <% if @post.photo.exists? %>
          <%= image_tag @post.photo.url %>
      <% end %>

      <%= @post.body %>
    </div>

    <ul class="hlist">
      <li><%= link_to "New Post", new_post_path, :class => 'btn btn-sm' %></li>
      <li><%= link_to "Edit Post", edit_post_path(@post.id), :class => 'btn btn-sm' %></li>
    </ul>
  </div>
</div>

<div class="grid">
  <div class="grid-col grid-col-sm_6of6 grid-col-md_3of6">
    <% if @newer %>
        <div><%= link_to truncate(@newer.title, :length => 20), @newer %></div>
    <% end %>
  </div>
  <div class="grid-col grid-col-sm_6of6 grid-col-md_3of6">
    <% if @older %>
        <div><%= link_to truncate(@older.title, :length => 20), @older %></div>
    <% end %>
  </div>
</div>
