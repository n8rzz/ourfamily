<li>
    <div class="excerpt">
      <div class="excerpt-hd">
          <ul class="hlist">
              <li>
                <h2 class="hdg hdg_3"><%= link_to post.title, post, class: 'link' %></h2>
              </li>

              <% if correct_user?(post.user) %>
                  <li>
                      <%= button_to('Edit', edit_post_path(post.id), { :method => :get, :class => 'btn btn-sm' }) %>
                  </li>
                  <li>
                      <%= button_to('Delete', post, { :method => :delete, class: 'btn btn-sm mix-btn_alert' }) %>
                  </li>
              <% end %>

          </ul>
          <ul class="hlist">
              <li>
                  <div class="txt txt-sm mix-txt_italic">
                      <%= time_ago_in_words(post.created_at) %> ago
                  </div>
              </li>
              <li>
                  <div class="txt txt-sm mix-txt_italic">
                      <%= post.user.name %>
                  </div>
              </li>
          </ul>
      </div>
      <div class="excerpt-bd">

          <% if post.photo.exists? %>
              <div>
                  <%= image_tag post.photo.url(:medium) %>
              </div>
          <% end %>

          <%= simple_format(post.body, wrapper_tag: 'div') %>
      </div>
  </div>
</li>
