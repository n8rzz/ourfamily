<li>
    <div class="excerpt">
        <div class="excerpt-hd">
            <h2 class="hdg"><%= link_to post.title, post %></h2>
            <div><%= time_ago_in_words(post.created_at) %> ago</div>
            <div><%= post.user.email %></div>
        </div>
        <div class="excerpt-bd">
            <%= post.body %>
        </div>
        <div class="excerpt-ft">
            <% if user_signed_in? %>
                <div>{EDIT}</div>
            <% end %>
        </div>
    </div>
</li>