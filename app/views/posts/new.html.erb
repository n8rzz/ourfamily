<div class="grid">
  <div class="grid-col grid-col-sm_6of6 mix-grid-col-md_push1of6 grid-col-md_5of6">
    <h2 class="hdg hdg_2">New Post</h2>

    <%= form_for @post, :html => { :multipart => true } do |f| %>
      <%= render 'shared/error_messages', object: @post %>

      <ul class="vlist">
          <li>
              <%= f.label :title, :class => 'input-label' %>
              <br />
              <%= f.text_field :title, :class => 'input input-sm' %>
          </li>
          <li>
              <%= f.label :body, :class => 'input-label' %>
              <br />
              <%= f.text_area :body, :class => 'input input-textarea input-sm' %>
          </li>

          <%= f.fields_for :images, @post.images do |i| %>
            <li>
                <%= i.label :attachment, "Add a Photo to this Post" %>
                <br />
                <%= i.file_field :attachment %>
            </li>
            <li>
                <%= i.label :name, 'Name' %>
                <br />
                <%= i.text_field :name, :class => 'input input-sm' %>
            </li>
            <li>
                <%= i.label :description, 'Description' %>
                <br />
                <%= i.text_field :description, :class => 'input input-sm' %>
            </li>
          <% end %>

          <li>
              <%= f.submit "Add New Post", :class => 'btn' %>
          </li>
      </ul>
    <% end %>

  </div>
</div>
