<div class="grid">
  <div class="grid-col grid-col-pull grid-col-sm_6of6 grid-col-md_2of6">

    <h2 class="hdg hdg_3 u-isHiddenSM">Member Activity</h2>
    <h2 class="hdg hdg_3 u-isHiddenMD" data-controller="js-drawer-trigger">Member Activity</h2>
    <ol class="" data-controller="js-drawer-container">
        <% @users.each_with_index do |user| %>
          <%= render partial: 'homescreen/user', object: user %>
        <% end %>
    </ol>

  </div>
  <div class="grid-col grid-col-sm_6of6 grid-col-md_4of6">

    <h2 class="hdg hdg_2">Recent Posts</h2>
    <ul class="vlist">
        <%= render @posts %>
    </ul>

  </div>
</div>


